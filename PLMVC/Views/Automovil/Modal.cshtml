<div class="modal" tabindex="-1" role="dialog" id="Modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Aviso</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5>@ViewBag.Mensaje</h5> <!--"Message debe ser el mismo nombre que en las ViewBags de mi controlador"-->
            </div>
            <div class="modal-footer">
                @*@Html.ActionLink("Regresar", "GetAll", "Materia", htmlAttributes: new { @class = "btn btn-danger" })*@

                @Html.ActionLink("Vale", "GetAll", "Automovil", htmlAttributes: new { @class = "btn btn-danger" })

            </div>
        </div>
    </div>
</div>

<script>$('#Modal').modal();</script>